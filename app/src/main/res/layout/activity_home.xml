<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgg"
    android:weightSum="10"
    tools:context=".Home">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Kampung Wisata "
        android:textColor="@android:color/white"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/textViewe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Malang "
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:ignore="DuplicateIds" />


    <android.support.v7.widget.GridLayout
        android:layout_width="328dp"
        android:layout_height="328dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:padding="16dp"
        app:columnCount="2"
        app:rowCount="2"

        >

        <!-- column1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"

            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >


            <Button
                android:id="@+id/buttonGelintung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:onClick="NextMethod"
                android:text="Button" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="105dp"
                android:text="Glintung"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="104dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/logo3g" />

        </android.support.v7.widget.CardView>

        <!-- column2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="105dp"

                android:text="Kampung 3D"
                android:textColor="@android:color/black" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_marginLeft="9dp"
                android:layout_height="107dp"
                app:srcCompat="@drawable/unnamed" />

            <ImageButton
                android:id="@+id/buttonTridi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="NextMethod"
                app:srcCompat="@drawable/unnamed" />



        </android.support.v7.widget.CardView>
        <!-- column3 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="105dp"

                android:text="Warna-Warni"
                android:textColor="@android:color/black" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="107dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/warna" />
            <ImageButton
                android:id="@+id/buttonWarna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="NextMethod"
                app:srcCompat="@drawable/unnamed" />

        </android.support.v7.widget.CardView>

        <!-- column4 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="105dp"

                android:text="Kajoe Tangan"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="94dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                app:srcCompat="@drawable/kayu" />

            <ImageButton
                android:id="@+id/buttonKayutangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="NextMethod"
                app:srcCompat="@drawable/unnamed" />
        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/runningText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="the author is shobirin"
        android:textAlignment="textStart"
        android:textColor="@color/White"
        android:textStyle="bold" />


</RelativeLayout>