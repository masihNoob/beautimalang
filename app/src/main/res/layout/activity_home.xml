<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgg"
    android:weightSum="10"
    tools:context=".Home">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Beautiful Malang"
        android:textColor="@android:color/white"
        android:textSize="30sp" />


    <android.support.v7.widget.GridLayout
        android:layout_width="328dp"
        android:layout_height="328dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:padding="16dp"
        app:columnCount="2"
        app:rowCount="2"

        >

        <!-- column1 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"

            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >


            <Button
                android:id="@+id/buttonGelintung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:onClick="pindah"
                android:text="Button" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="105dp"
                android:text="Gelintung"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/logo3g" />

        </android.support.v7.widget.CardView>

        <!-- column2 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="105dp"

                android:text="Kampung 3D"
                android:textColor="@android:color/black" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                app:srcCompat="@drawable/unnamed" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="pindah3"
                app:srcCompat="@drawable/unnamed" />



        </android.support.v7.widget.CardView>
        <!-- column3 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="105dp"

                android:text="Warna-Warni"
                android:textColor="@android:color/black" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="107dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/warna" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="pindah4"
                app:srcCompat="@drawable/unnamed" />

        </android.support.v7.widget.CardView>

        <!-- column4 -->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="126dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="105dp"

                android:text="Kajoe Tangan"
                android:textColor="@android:color/black" />
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="107dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                app:srcCompat="@drawable/iconkayu" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:onClick="pindah5"
                app:srcCompat="@drawable/unnamed" />
        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>


</RelativeLayout>